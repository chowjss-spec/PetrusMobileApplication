<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagePet"
        android:layout_width="190dp"
        android:layout_height="173dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/placeholder" />

    <TextView
        android:id="@+id/label_petId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pet Id:"
        app:layout_constraintBottom_toTopOf="@+id/label_petName"
        app:layout_constraintStart_toStartOf="@+id/label_petStatus"
        app:layout_constraintTop_toBottomOf="@+id/label_petStatus" />

    <TextView
        android:id="@+id/value_note_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/value_note_title"
        android:text="ValueId"
        app:layout_constraintBottom_toTopOf="@+id/value_note_title"
        app:layout_constraintStart_toStartOf="@+id/adoptionStatus"
        app:layout_constraintTop_toBottomOf="@+id/adoptionStatus" />

    <TextView
        android:id="@+id/label_petName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        app:layout_constraintBottom_toTopOf="@+id/label_petBreed"
        app:layout_constraintStart_toStartOf="@+id/label_petId"
        app:layout_constraintTop_toBottomOf="@+id/label_petId" />

    <TextView
        android:id="@+id/value_note_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ValueTitle"
        app:layout_constraintBottom_toTopOf="@+id/petBreed"
        app:layout_constraintStart_toStartOf="@+id/value_note_id"
        app:layout_constraintTop_toBottomOf="@+id/value_note_id" />

    <TextView
        android:id="@+id/label_Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Age:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/label_petColor"
        app:layout_constraintTop_toBottomOf="@+id/label_petColor" />

    <TextView
        android:id="@+id/petBreed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:text="Breed"
        app:layout_constraintBottom_toTopOf="@+id/petColor"
        app:layout_constraintStart_toStartOf="@+id/value_note_title"
        app:layout_constraintTop_toBottomOf="@+id/value_note_title" />

    <TextView
        android:id="@+id/petColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pet Color"
        app:layout_constraintBottom_toTopOf="@+id/petAge"
        app:layout_constraintStart_toStartOf="@+id/petBreed"
        app:layout_constraintTop_toBottomOf="@+id/petBreed" />

    <TextView
        android:id="@+id/label_petColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Color:"
        app:layout_constraintBottom_toTopOf="@+id/label_Age"
        app:layout_constraintStart_toStartOf="@+id/label_petBreed"
        app:layout_constraintTop_toBottomOf="@+id/label_petBreed" />

    <TextView
        android:id="@+id/label_petBreed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breed:"
        app:layout_constraintBottom_toTopOf="@+id/label_petColor"
        app:layout_constraintStart_toStartOf="@+id/label_petName"
        app:layout_constraintTop_toBottomOf="@+id/label_petName" />

    <TextView
        android:id="@+id/label_petStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Status:"
        app:layout_constraintBottom_toTopOf="@+id/label_petId"
        app:layout_constraintStart_toEndOf="@+id/imagePet"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/adoptionStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AdoptionStatus"
        app:layout_constraintBottom_toTopOf="@+id/value_note_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/label_petStatus"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/petAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pet Age"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/petColor"
        app:layout_constraintTop_toBottomOf="@+id/petColor" />

</androidx.constraintlayout.widget.ConstraintLayout>