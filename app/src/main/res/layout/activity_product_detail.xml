<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/light_white_2"
    tools:context=".ProductDetailActivity">
<androidx.appcompat.widget.AppCompatTextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/productDetailTitle"
    android:textSize="30sp"
    android:textColor="@color/primary_blue"
    android:fontFamily="@font/roboto_bold"
    android:text="Product Details"
    android:padding="10dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintVertical_bias="0.03">
</androidx.appcompat.widget.AppCompatTextView>
<androidx.appcompat.widget.AppCompatImageView
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/myImage"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintVertical_bias="0.15">
</androidx.appcompat.widget.AppCompatImageView>
<androidx.appcompat.widget.AppCompatTextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/productDetails"
    android:textSize="20sp"
    android:textColor="@color/oxford_blue"
    android:fontFamily="@font/roboto"
    android:padding="10dp"
    app:layout_constraintTop_toBottomOf="@id/productDetailTitle"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintVertical_bias="0.6">
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">
</androidx.appcompat.widget.AppCompatTextView>
<androidx.appcompat.widget.AppCompatButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/contactButton"
    android:text="Contact seller"
    android:backgroundTint="@color/primary_blue"
    android:textColor="@color/light_white_2"
    android:fontFamily="@font/roboto"
    android:textStyle="bold"
    app:layout_constraintTop_toBottomOf="@id/productDetails"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="@id/backButton">
</androidx.appcompat.widget.AppCompatButton>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backButton"
        android:text="Back to List"
        android:backgroundTint="@color/primary_blue"
        android:textColor="@color/light_white_2"
        android:fontFamily="@font/roboto"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/productDetails"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/contactButton"
        app:layout_constraintRight_toRightOf="parent">
    </androidx.appcompat.widget.AppCompatButton>
</androidx.constraintlayout.widget.ConstraintLayout>