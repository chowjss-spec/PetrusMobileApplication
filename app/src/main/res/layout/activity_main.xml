<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/light_white_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/main_title"
            android:textColor="@color/oxford_blue"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:text="@string/main_subtitle"
            android:textColor="@color/oxford_blue"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textSize="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp"
            android:id="@+id/adoptionListings" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/primary_blue"
                android:padding="10dp">

                <TextView
                    android:id="@+id/adoption_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adoption"
                    android:textSize="30dp"
                    android:textColor="@color/light_white_2"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save pets, save lives."
                    android:layout_below="@id/adoption_title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/light_white_2"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:maxHeight="200dp"
                    android:src="@drawable/dog_39"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp"
            android:id="@+id/products" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/yellow"
                android:padding="10dp">

                <TextView
                    android:id="@+id/product_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Products"
                    android:textSize="30dp"
                    android:textColor="@color/oxford_blue"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High quality products \nfor your loving pet."
                    android:layout_below="@id/product_title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/oxford_blue"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:maxHeight="200dp"
                    android:src="@drawable/dog_59"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="1dp"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp"
            android:id="@+id/services" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/red"
                android:padding="10dp">

                <TextView
                    android:id="@+id/services_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Services"
                    android:textSize="30dp"
                    android:textColor="@color/light_white_2"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivering happiness \nfor your fluffy fur kid."
                    android:layout_below="@id/services_title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/light_white_2"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    android:textSize="16dp" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:maxHeight="200dp"
                    android:src="@drawable/dog_67"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="5dp"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>

